# Build stage - using Node 20
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files first (for better caching)
COPY package*.json ./

# Install dependencies 
RUN npm install --no-audit --no-fund

# Declare build arguments so Docker accepts them from docker-compose
ARG VITE_API_BASE_URL
ARG CYTOCHAL_API_HOST
ARG CYTOCHAL_BACKEND_PORT
ARG CYTOCHAL_API_BASE_PATH
ARG CYTOCHAL_FRONTEND_PORT
ARG CYTOCHAL_FRONTEND_BASE_URL
ARG CYTOCHAL_IS_DEV

# Map them to environment variables for the build process
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL
ENV CYTOCHAL_API_HOST=$CYTOCHAL_API_HOST
ENV CYTOCHAL_BACKEND_PORT=$CYTOCHAL_BACKEND_PORT
ENV CYTOCHAL_API_BASE_PATH=$CYTOCHAL_API_BASE_PATH
ENV CYTOCHAL_FRONTEND_PORT=$CYTOCHAL_FRONTEND_PORT
ENV CYTOCHAL_FRONTEND_BASE_URL=$CYTOCHAL_FRONTEND_BASE_URL
ENV CYTOCHAL_IS_DEV=$CYTOCHAL_IS_DEV
# ------------------------


# Copy source code
COPY . .

# Build the application
RUN npm run build

# Production stage - just serve the static files with a simple server
FROM node:20-alpine AS production

WORKDIR /app

# Install serve to run the built app
RUN npm install -g serve

# Copy built app from builder stage
COPY --from=builder /app/dist ./dist

# Expose port 3000 (matches your nginx proxy upstream)
EXPOSE 3000



# Start the application with SPA fallback for client-side routing
CMD ["serve", "-s", "dist", "-l", "3000", "--single"]