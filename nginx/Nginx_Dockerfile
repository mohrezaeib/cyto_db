FROM nginx:alpine

# Install envsubst for configuration templating
RUN apk add --no-cache gettext

# Remove default nginx configuration
RUN rm -f /etc/nginx/conf.d/default.conf

# Create nginx cache directory
RUN mkdir -p /var/cache/nginx

# Copy nginx configuration template
COPY nginx.conf.template /etc/nginx/nginx.conf.template

# Copy entrypoint script
COPY nginx-entrypoint.sh /docker-entrypoint.d/90-config-template.sh
RUN chmod +x /docker-entrypoint.d/90-config-template.sh

# Expose port (fixed to 80)
EXPOSE 80

# Use default nginx entrypoint
CMD ["nginx", "-g", "daemon off;"]